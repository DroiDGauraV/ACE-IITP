<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:ignore="HardcodedText">

    <com.google.android.material.button.MaterialButton
        style="@style/Widget.Example.Button.TextButton"
        android:id="@+id/menu_btn_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CONTACT US"/>

    <com.google.android.material.button.MaterialButton
        style="@style/Widget.Example.Button.TextButton"
        android:id="@+id/menu_btn_ace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ABOUT US - ACE"/>
    <View
        android:layout_width="56dp"
        android:layout_height="1dp"
        android:background="#fff"
        android:layout_margin="16dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/menu_btn_gallery"
        style="@style/Widget.Example.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GALLERY" />


    <com.google.android.material.button.MaterialButton
        style="@style/Widget.Example.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Follow Us On"/>

    <LinearLayout
        android:layout_margin="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        style="@style/Widget.example.Backdrop"
        android:orientation="horizontal"
        tools:ignore="HardcodedText" >

        <ImageView
            android:id="@+id/menu_btn_fb"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:contentDescription="Facebook"
            app:srcCompat="@drawable/ic_facebook"/>

        <ImageView
            android:id="@+id/menu_btn_insta"
            android:backgroundTint="#fff"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/ic_instagram_sketched"
            android:contentDescription="Facebook" />

        <ImageView
            android:id="@+id/menu_btn_linkd"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/ic_linkedin"
            android:contentDescription="Facebook" />

    </LinearLayout>
</merge>