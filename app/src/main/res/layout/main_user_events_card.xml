<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="170dp"
    android:layout_height="100dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    tools:ignore="HardcodedText"
    app:cardCornerRadius="16dp"
    android:layout_margin="5dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/view_img_user_event"
            android:layout_width="170dp"
            android:layout_height="100dp"
            android:contentDescription="img_new_event"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/image2" />

        <View
            android:layout_width="170dp"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/main_gradient_image_bg" />

        <TextView
            android:id="@+id/view_tv_user_event"
            android:textSize="14sp"
            style="@style/TextAppearance.Text.Toolbar"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/view_img_user_event"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="16dp"
            android:text="Autocad challenge"
            android:textAllCaps="false" />


    </RelativeLayout>
</androidx.cardview.widget.CardView>