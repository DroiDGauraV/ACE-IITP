<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="24dp"
    tools:ignore="HardcodedText">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/view_img_new_story"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:contentDescription="img_new_event"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/image2" />

        <View
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_gravity="bottom"
            android:background="@drawable/events_gradient_image_bg" />

        <TextView
            android:id="@+id/view_tv_new_story"
            style="@style/TextAppearance.Text.Toolbar"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/view_img_new_story"
            android:layout_alignParentStart="true"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="16dp"
            android:text="Event One"
            android:textAllCaps="false"
            android:textStyle="bold" />


    </RelativeLayout>
</androidx.cardview.widget.CardView>