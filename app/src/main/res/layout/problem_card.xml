<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:layout_weight="1"
    android:elevation="5dp"
    app:cardCornerRadius="15dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    tools:ignore="HardcodedText" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_margin="0dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/view_img_prob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="4dp"
            android:adjustViewBounds="true"
            android:contentDescription="card_logo"
            android:scaleType="fitCenter"
            android:src="@drawable/image1" />

        <TextView
            android:id="@+id/view_text_prob"
            style="@style/TextAppearance.Text.Toolbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:text="Title Goes Here"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#1C1C1C"
            android:textSize="14sp" />

            <TextView
                android:layout_marginBottom="6dp"
                android:id="@+id/view_text_prob_number"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Problem Statement 1"
                android:layout_marginTop="2dp"
                android:textColor="@color/textInputOutlineColor"
                android:textSize="12sp"
                tools:ignore="SmallSp" />


    </LinearLayout>

</androidx.cardview.widget.CardView>